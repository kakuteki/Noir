{
  "name": "noir-css",
  "version": "1.0.0",
  "description": "A utility-first CSS framework with dark-cool aesthetic and red/orange accents",
  "main": "css/noir.css",
  "style": "css/noir.css",
  "scripts": {
    "build": "node scripts/build.js",
    "lint": "stylelint \"css/**/*.css\"",
    "test": "jest --coverage",
    "test:e2e": "npx playwright test"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "files": [
    "css/",
    "dist/"
  ],
  "keywords": [
    "css",
    "css-framework",
    "utility-first",
    "dark-theme",
    "dark-mode",
    "responsive",
    "lightweight",
    "frontend",
    "ui"
  ],
  "author": "kakuteki",
  "license": "Apache-2.0",
  "homepage": "https://kakuteki.github.io/Noir/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kakuteki/Noir.git"
  },
  "bugs": {
    "url": "https://github.com/kakuteki/Noir/issues"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "browserslist": "^4.23.0",
    "jest": "^30.2.0",
    "lightningcss": "^1.25.0",
    "serve": "^14.2.5",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 versions",
    "not dead"
  ]
}
